pipeline {
    agent { docker { image 'maven:3.3.3' } }
    
    stages {
         // 
         stage('log version info') {
          steps {
            sh 'mvn --version'
            sh 'mvn clean install'
            }
        }

        stage('Build') {
            steps {
                // Compilar la aplicaci√≥n Spring Boot usando Maven Wrapper
                sh './mvnw clean package'
            }
        }
        stage('Test') {
            steps {
                // Ejecutar pruebas
                sh './mvnw test'
            }
        }
}
